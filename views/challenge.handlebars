{{> challenge_nav }}
<main>
   <div>
      <h1>{{ dataValues.Template.dataValues.name }}</h1>
   </div>
   <div>
      <h4>Challenge Status: {{ dataValues.state }}</h4>
      <div class="collection">
         <h4>Rules:</h4>
         <div class="collection">
            <p>{{ dataValues.Template.dataValues.rule }}</p>
         </div>
         {{#if dataValues.state_code }}
            {{> state_challenge_accepted }}
         {{/if}}
         {{#unless dataValues.state_code }}
            {{> state_challenge_issued }}
         {{/unless}}
      </div>
</main>